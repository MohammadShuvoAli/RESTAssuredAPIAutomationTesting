{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "store": {
      "type": "object",
      "properties": {
        "book": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "author": {
                "type": "string"
              },
              "category": {
                "type": "string"
              },
              "price": {
                "type": "number"
              },
              "title": {
                "type": "string"
              }
            },
            "required": ["author", "category", "price", "title"]
          }
        }
      },
      "required": ["book"]
    }
  },
  "required": ["store"]
}
